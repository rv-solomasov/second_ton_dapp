import React, { useState } from 'react';
import { TonConnectButton } from '@tonconnect/ui-react';
import './App.css';
import { useMainContract } from './hooks/useMainContract';
import { useTonConnect } from './hooks/useTonConnect';
import { fromNano } from '@ton/core';
import WebApp from '@twa-dev/sdk';

function App() {
  const {
    contract_address,
    counter_value,
    contract_balance,
    betOnHeads,
    betOnTails,
    sendDeposit,
    sendWithdrawalRequest
  } = useMainContract();

  const { connected } = useTonConnect();

  const [betAmount, setBetAmount] = useState("0.05"); // State for bet amount

  const showAlert = () => {
    WebApp.showAlert("Hey there!");
  };

  return (
    <div>
      <div>
        <TonConnectButton />
      </div>
      <div>
        <div className='Card'>
          <b>You are on: {WebApp.platform}</b>
          <br />
          <b>Our contract Address</b>
          <div className='Hint'>{contract_address?.slice(0, 30) + "..."}</div>
          <b>Our contract Balance</b>
          {contract_balance && (
            <div className='Hint'>{fromNano(contract_balance)}</div>
          )}
        </div>

        <div className='Card'>
          <b>Total Games Played</b>
          <div>{counter_value ?? "Loading..."}</div>
        </div>
        
        <button onClick={showAlert}>
          Show Tutorial
        </button>
        <br />

        {/* Input for the bet amount */}
        <div>
          <label>Bet Amount (in TON): </label>
          <input
            type="number"
            value={betAmount}
            onChange={(e) => setBetAmount(e.target.value)}
            min="0.01" // Minimum bet amount
            step="0.01" // Increment by 0.01 TON
          />
        </div>
        <br />

        {connected && (
          <>
            <button onClick={sendDeposit}>
              Deposit 1 TON
            </button>
            <br />
            <button onClick={sendWithdrawalRequest}>
              Withdraw 0.5 TON
            </button>
            <br />
            <button onClick={() => betOnHeads(betAmount)}>
              Bet on Heads
            </button>
            <br />
            <button onClick={() => betOnTails(betAmount)}>
              Bet on Tails
            </button>
          </>
        )}
      </div>
    </div>
  );
}

export default App;